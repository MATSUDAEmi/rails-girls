<%= form_for @idea, :html => {multipart: true, class: 'form-horizontal'} do |f|%>

  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, '', class: 'col-sm-3 control-label' %>
    <%= f.text_field :name, class: 'col-sm-9' %>
  </div>
  <div class="control-group">
    <%= f.label :description, '', class: 'col-sm-3 control-label' %>
    <%= f.text_field :description, class: 'col-sm-9' %>
  </div>
  <div class="control-group">
    <%= f.label :picture, '', class: 'col-sm-3 control-label' %>
    <%= f.file_field :picture, class: 'btn' %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
